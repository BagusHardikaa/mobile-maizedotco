<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    tools:context=".CreateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/maizeicon"/>

    <TextView
        android:id="@+id/jenis"
        android:layout_width="374dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-3dp"
        android:layout_toRightOf="@id/imageview"
        android:background="@color/lime"
        android:paddingTop="10dp"
        android:text="JeKit Corn"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/namapenyakit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingTop="50dp"
        android:text="Nama Penyakit"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>
    <EditText
        android:id="@+id/nama"
        android:paddingTop="5dp"
        android:layout_below="@+id/namapenyakit"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:inputType="text"/>
    <TextView
        android:id="@+id/judulPenyakit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/nama"
        android:paddingTop="20dp"
        android:text="Deksripsi Penyakit"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>
    <EditText
        android:id="@+id/penyakit"
        android:layout_marginTop="16dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judulPenyakit"
        android:inputType="text"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>
    <Button
        android:id="@+id/btn_simpan"
        android:layout_below="@+id/penyakit"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#7BBD6F"
        android:textColor="@color/black"
        android:layout_marginLeft="100dp"
        android:text="Simpan"/>
    <Button
        android:id="@+id/btn_kembali"
        android:layout_below="@+id/btn_simpan"
        android:layout_marginTop="10dp"
        android:backgroundTint="#7BBD6F"
        android:textColor="@color/black"
        android:layout_marginLeft="100dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Kembali"/>

    <Button
        android:id="@+id/btn_mongo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#7BBD6F"
        android:text="Get Penyakit"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/btn_kembali"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_kembali"
        android:layout_marginTop="70dp"
        android:paddingTop="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/black"
        android:text="Hasil:" />

    </RelativeLayout>

</ScrollView>