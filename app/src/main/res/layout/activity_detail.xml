<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".Penyakit">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#7BBD6F"
        android:text="JeKit Corn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingTop="30dp"
        android:text="Nama Penyakit"/>
    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:hint="Nama Penyakit"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:text="Deskripsi Penyakit"/>
    <TextView
        android:id="@+id/penyakit"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:hint="Deskripsi Penyakit"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_kembali"
        android:layout_below="@+id/penyakit"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#7BBD6F"
        android:textColor="@color/black"
        android:text="Kembali"/>
</LinearLayout>