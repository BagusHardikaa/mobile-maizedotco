<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/maizeicon"/>

    <TextView
        android:id="@+id/jenis"
        android:layout_width="374dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-3dp"
        android:layout_toRightOf="@id/imageview"
        android:background="@color/lime"
        android:paddingTop="10dp"
        android:text="JeKit Corn"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingTop="50dp"
        android:text="Nama Penyakit"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>
    <EditText
        android:id="@+id/nama"
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>
    <TextView
        android:id="@+id/judulPenyakit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingTop="20dp"
        android:layout_below="@+id/nama"
        android:text="Deksripsi Penyakit"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>
    <EditText
        android:id="@+id/penyakit"
        android:layout_marginTop="125dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>
    <Button
        android:id="@+id/btn_simpan"
        android:onClick="getAllPenyakit"
        android:layout_below="@+id/penyakit"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#7BBD6F"
        android:textColor="@color/black"
        android:text="Simpan"
        android:layout_marginLeft="100dp"/>
    <Button
        android:id="@+id/btn_kembali"
        android:onClick="getAllPenyakit"
        android:layout_below="@+id/btn_simpan"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#7BBD6F"
        android:textColor="@color/black"
        android:layout_marginLeft="100dp"
        android:text="Kembali"/>


</RelativeLayout>